%p#notice= notice
%h1 Home Reviews
%table
  %thead
    %tr
      %th Review
      %th Accuracy rate
      %th Location rate
      %th Communication rate
      %th Cleanliness rate
      %th Checkin rate
      %th Cost performance rate
      %th{:colspan => "3"}
  %tbody
    - @home_reviews.each do |home_review|
      %tr
        %td= home_review.review
        %td= home_review.accuracy_rate
        %td= home_review.location_rate
        %td= home_review.communication_rate
        %td= home_review.cleanliness_rate
        %td= home_review.checkin_rate
        %td= home_review.cost_performance_rate
        %td= link_to 'Show', home_review
        %td= link_to 'Edit', edit_home_review_path(home_review)
        %td= link_to 'Destroy', home_review, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Home Review', new_home_review_path
