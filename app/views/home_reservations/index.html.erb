<p id="notice"><%= notice %></p>

<h1>Home Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Checkin date</th>
      <th>Checkout date</th>
      <th>Number of guests</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @home_reservations.each do |home_reservation| %>
      <tr>
        <td><%= home_reservation.checkin_date %></td>
        <td><%= home_reservation.checkout_date %></td>
        <td><%= home_reservation.number_of_guests %></td>
        <td><%= link_to 'Show', home_reservation %></td>
        <td><%= link_to 'Edit', edit_home_reservation_path(home_reservation) %></td>
        <td><%= link_to 'Destroy', home_reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

