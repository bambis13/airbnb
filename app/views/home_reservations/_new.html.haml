.reservation_new.nav-set
  = form_for home_reservation do |f|
    .reservation_new__heading
      .default_fee
        %h1.bold ¥ #{home.price.default_price}
        %p / 1泊
      .review
        %span.review-star ★★★★★
        %span.bold 255
    .reservation_new__body
      %h5 日付
      %table.form-type-btn.form-type-btn__visible
        %th
          = f.text_field :checkin_date, class: 'reservation-checkin calc-listner',placeholder: "チェックイン"
        %th
          %i.fa.fa-arrow-right.fa-lg
        %th
          = f.text_field :checkout_date, class: 'reservation-checkout calc-listner',placeholder: "チェックアウト"
      .number_of_guests
        %h5 人数
        .form-type-btn.form-type-btn__visible#guests-num-btn
          .form-texts.inline
            %p.form-text-adult ゲスト1人
          .form-icon
            %i.fa.fa-angle-down.fa-lg#rotate
        .capacity_condition.capacity_condition_guests#select-guests-num
          .select-capacity.clearfix
            .select-capacity__adults.select-capacity__item.clearfix
              .human-attributes
                %p 大人
              .counting-box.clearfix.right
                .counting-down
                  %button.count-down-adult{disabled: true} -
                .number
                  %input.number-of-adult{name: "number-of-adult-sa", type: "hidden", value: 1, class: "number-of-adult"}
                  %p.number-of-adult-html 1
                .counting-up
                  %button.count-up-adult +
            .select-capacity__children.select-capacity__item.clearfix
              .human-attributes
                %p 子ども
                %p 年齢2 - 12
              .counting-box.clearfix.right
                .counting-down
                  %button.count-down-children{disabled: true} -
                .number
                  %input.number-of-children{name: "number-of-children-sa", type: "hidden", value: 0, class: "number-of-children"}
                  %p.number-of-children-html 0
                .counting-up
                  %button.count-up-children +
            .select-capacity__babies.select-capacity__item.clearfix
              .human-attributes
                %p 乳幼児
                %p 2歳未満
              .counting-box.clearfix.right
                .counting-down
                  %button.count-down-babies{disabled: true} -
                .number
                  %input.number-of-babies{name: "number-of-babies-sa",  value: 0, type: "hidden", class: "number-of-babies"}
                  %p.number-of-babies-html 0
                .counting-up
                  %button.count-up-babies +
            .notification-box
              %h4 最大#{home.capacity}名まで宿泊可能。乳幼児は人数にカウントされません。
            .action-box
              %button.close-button.bold 閉じる
        .number_of_guests
          / %h2 ゲスト1人
        .number_of_adults
          = f.hidden_field :number_of_adults, required: true, autofocus: true, placeholder: "ゲスト1人", class: "number_of_guests_input"
        .number_of_kids
          = f.hidden_field :number_of_kids, autofocus: true, placeholder: "子供", class: "number_of_guests_input"
        .number_of_babies
          = f.hidden_field :number_of_babies, autofocus: true, placeholder: "乳幼児", class: "number_of_guests_input"
    .reservation_new__body--hidden
      %input{name: "max_guests_num", type: "hidden", value: "#{home.capacity}"}/
      %input{name: "additional_fee_from", type: "hidden", value: "#{home.price.additional_fee_from}"}/
      = f.hidden_field :default_fee, value: home.price.default_price, required: true, name: "default_fee"
      = f.hidden_field :additional_fee_per_person, value: home.price.additional_fee_per_person, required: true, name: "additional_guests_fee"
      = f.hidden_field :cleaning_fee, value: home.price.cleaning_fee, required: true, name: "cleaning_fee"
      = f.hidden_field :service_fee, value: home.price.service_fee, required: true, name: "service_fee"
      = f.hidden_field :additional_fee_from, value: home.price.additional_fee_from, required: true, name: "cleaning_fee"
      = f.hidden_field :total_fee, value: 9999,required: true, name: "total_price_input"
    .reservation_new__result.removed
      .reservation_new__result__default.clearfix
        %span.left ¥ #{home.price.default_price} × 1泊
        %i.fa.fa-question-circle-o.bill-statement
        %span.right ¥ #{home.price.default_price}
      .reservation_new__result__cleaning.clearfix
        %span.left 清掃料金
        %i.fa.fa-question-circle-o
        %span.right ¥ #{home.price.cleaning_fee}
        .fee-annotation_cleaning.sub-window.removed
          %p お部屋のお掃除の費用をホストが請求します。1滞在につき1回の料金です。
          %h2.close-btn-annotation ×
      .reservation_new__result__service.clearfix
        %span.left サービス料
        %i.fa.fa-question-circle-o
        %span.right ¥ #{home.price.service_fee}
        .fee-annotation_service.sub-window.removed
          %p プラットフォームの運営と24時間365日の旅行サポートなどのサービス提供にかかる費用です。VAT込み。
          %h2.close-btn-annotation ×
      .reservation_new__result__total.clearfix
        %span.left.bold 合計
        %span.right.bold ¥ 9,999
    .reservation_new__submit
      = f.submit "料金を計算", id: "button", class: "submit_btn"
      %p まだ請求は発生しません
    .reservation_new__message
      %h1.bold お得
      %p この立地、星評価、アメニティ・設備でこの料金設定はお得感あり
      = image_tag("trophy.gif")
